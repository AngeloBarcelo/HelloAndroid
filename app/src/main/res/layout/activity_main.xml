<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar"
    tools:context="com.example.android.helloandroid.MainActivity">

    <!--Top section Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:orientation="horizontal">

        <!--Left side of top section-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/compName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@string/titleStyle"
                android:gravity="center"
                android:text="@string/compName"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/titleSize" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/marginAround"
                android:fontFamily="@string/bodyStyle"
                android:forceHasOverlappingRendering="false"
                android:gravity="center_horizontal"
                android:text="@string/message"
                android:textColor="@color/topBody"
                android:textSize="@dimen/bodySize" />

        </LinearLayout>

        <!--Right section of top section-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:contentDescription="@string/dogDiscription"
                android:scaleType="centerCrop"
                android:src="@drawable/dog" />

        </LinearLayout>
    </LinearLayout>

    <!--Middle section layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/leftMargin"
        android:orientation="horizontal">

        <!--Left side of middle section-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/marginAround"
                android:fontFamily="@string/titleStyle"
                android:text="@string/header"
                android:textSize="@dimen/titleSize" />

        </LinearLayout>

        <!--Right side of middle section-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <!--1st Row-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/topBottomMargin"
                android:autoLink="web"
                android:drawableLeft="@mipmap/ic_computer"
                android:fontFamily="@string/bodyStyle"
                android:text="@string/website"
                android:textSize="@dimen/bodySize" />

            <!--2nd row-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/topBottomMargin"
                android:autoLink="phone"
                android:drawableLeft="@mipmap/ic_phone"
                android:fontFamily="@string/bodyStyle"
                android:text="@string/phone"
                android:textSize="@dimen/bodySize" />

            <!--3rd row-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/topBottomMargin"
                android:autoLink="map"
                android:drawableLeft="@mipmap/ic_business"
                android:fontFamily="@string/bodyStyle"
                android:text="@string/address"
                android:textSize="@dimen/bodySize" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/udacityDiscription"
        android:scaleType="centerCrop"
        android:src="@drawable/udacity" />

</LinearLayout>
